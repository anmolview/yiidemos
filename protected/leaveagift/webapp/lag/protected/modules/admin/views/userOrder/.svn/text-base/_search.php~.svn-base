$cs = Yii::app()->getClientScript();
$cs->registerCoreScript('jquery');
$cs->registerCoreScript('jquery.ui');
$cs->registerCssFile(Yii::app()->request->baseUrl.'/css/bootstrap/jquery-ui.css');
$cs->registerScript('jquery.datepicker','	
var dates = $( "#'.CHtml::activeId($model, 'date_add').', #'.CHtml::activeId($model, 'endDate').'" ).datepicker({
		changeMonth: true,
		onSelect: function( selectedDate ) {
			var option = this.id == "'.CHtml::activeId($model, 'date_add').'" ? "minDate" : "maxDate",
				instance = $( this ).data( "datepicker" ),
				date = $.datepicker.parseDate(
					instance.settings.dateFormat ||
					$.datepicker._defaults.dateFormat,
					selectedDate, instance.settings );
			dates.not( this ).datepicker( "option", option, date );
		}
	});
	
	$(".btnreset").click(function(){
		$(":input","#search-user-order-form").each(function() {
		var type = this.type;
		var tag = this.tagName.toLowerCase(); // normalize case
		if (type == "text" || type == "password" || tag == "textarea") this.value = "";
		else if (type == "checkbox" || type == "radio") this.checked = false;
		else if (tag == "select") this.selectedIndex = "";
	  });
	});
');
